 {{> header }}

 <section class="section">
        <div class="container">

 <form action="create-product" method="POST">
        <p>Product Name</p> <input class="input is-primary" type="text" name="name" value={{ data.name }}>
        <p>Price</p> <input class="input is-primary" type="int" name="price" value={{ data.price }}>
        <p>Description</p><textarea class="textarea" name="description" rows="6" cols="25">{{ data.description }}</textarea><br />
        <p>Stock</p> <input class="input is-primary" type="int" name="stock" value={{ data.stock }}>
        <input type="hidden" class="input is-primary" id="id" name="id" value="{{ data.product_id }}">
        <input class="button is-info" type="submit" value="Send"><input class="button is-warning" type="reset" value="Clear">
</form>

    </container
</section>

{{> footer }}