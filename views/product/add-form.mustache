 {{> header }}

 <section class="section">
        <div class="container">

 <form action="create-product" method="POST">
    <div class="field">
        <label class="label">Product Name</label>
            <input class="input is-primary" type="text" name="name" value={{ data.name }}>
    </div>
    <div class="field">
            <label class="label">Price</label>
                <input class="input is-primary" type="int" name="price" value={{ data.price }}>
    </div>
    <div class="field">
            <label class="label">Description</label>
                <textarea class="textarea" name="description" rows="6" cols="25">{{ data.description }}</textarea>
    </div>
    <div class="field">
            <label class="label">Stock</label>
                <input class="input is-primary" type="int" name="stock" value={{ data.stock }}>
    </div>
     <div class="field is-grouped">
        <div class="control">
            <input class="button is-info" type="submit" value="Send">
        </div>
        <div class="control">
            <input class="button is-warning" type="reset" value="Clear">
        </div>
         <div class="control">
             <input type="hidden" class="input is-primary" id="id" name="id" value="{{ data.product_id }}">
        </div>
     </div>
</form>
</div>
</section>

{{> footer }}