{{> header }}

 <section class="section">
        <div class="container">

<form action="create-user" method="POST">
    <div class="field">
       <label class="label">Username</label>
           <input class="input is-primary" type="text" name="username" required minlength="4" maxlength="12">
           {{# data.error-message}}
           <div>{{ data.error-message }}</div>
           {{/ data.error-message}}
    </div>
    <div class="field">
        <label class="label">Password</label>
            <input class="input is-info" type="password" name="password" required minlength="6" maxlength="10">
    </div>
    <div class="field is-grouped">
        <div class="control">
            <input class="button is-info" type="submit" value="Send">
        </div>
        <div class="control">
            <input class="button is-warning" type="reset" value="Clear">
        </div>
    </div>
</form>

</section>

{{> footer}}