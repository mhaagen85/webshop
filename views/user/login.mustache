{{> header }}
 <section class="section">
        <div class="container">

<h1 class="title">Login Page</h1>
    <div class="container">
        <form method="POST" action="login-user">
            <div class="field">
              <label class="label">Username</label>
                 <input class="input is-primary" type="text" name="username" placeholder="Username">
            </div>
            <div class="field">
                <label class="label">Password</label>
                 <input class="input is-info" type="password" name="password" placeholder="Password">
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <input class="button is-info" type="submit" value="Send">
            </div>
            <div class="control">
                    <input class="button is-warning" type="reset" value="Clear">
             </div>
        </form>
    </div>
    </container
</section>


{{> footer }}